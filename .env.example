# ============================================================
# AI TRADING V2 - ENVIRONMENT CONFIGURATION
# ============================================================

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
DATABASE_URL=postgresql://trader:secure_pass@localhost:5432/trading_ai
POSTGRES_DB=trading_ai
POSTGRES_USER=trader
POSTGRES_PASSWORD=secure_pass

# ============================================================
# REDIS CONFIGURATION
# ============================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================================
# API CONFIGURATION
# ============================================================
# Binance API
BINANCE_BASE_URL=https://api.binance.com
BINANCE_API_KEY=
BINANCE_API_SECRET=

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Backend Port
PORT=8000

# ============================================================
# FRONTEND CONFIGURATION
# ============================================================
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================================
# SECURITY CONFIGURATION
# ============================================================
# JWT Secret (generate secure key for production)
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-change-in-production

# Encryption Key (32 bytes, base64 encoded for production)
ENCRYPTION_KEY=your-32-byte-encryption-key-change-in-production

# ============================================================
# TRADING CONFIGURATION
# ============================================================
# Paper Trading Mode (true = simulated, false = real)
PAPER_TRADING=true

# ============================================================
# MONITORING & LOGGING
# ============================================================
LOG_LEVEL=INFO
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# ============================================================
# FEATURE FLAGS
# ============================================================
# Enable microservices architecture
ENABLE_MICROSERVICES=false

# Enable AI predictions
ENABLE_AI_PREDICTIONS=false

# Enable pattern recognition learning
ENABLE_PATTERN_LEARNING=true

# ============================================================
# PRODUCTION OVERRIDES
# ============================================================
# Set ENVIRONMENT=production for production deployment
ENVIRONMENT=development

# Production API URL (override in production)
# NEXT_PUBLIC_API_URL=https://api.trading.example.com

# Production Database URL (override in production)
# DATABASE_URL=postgresql://trader:SECURE_PASSWORD@production-host:5432/trading_ai

# ============================================================
# DOCKER CONFIGURATION
# ============================================================
# Compose project name
COMPOSE_PROJECT_NAME=ai-trading-v2

# Docker network
DOCKER_NETWORK=trading-network
